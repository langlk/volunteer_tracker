<% if @volunteer %>
  <h1>Edit Volunteer</h1>

  <form action="/volunteers/<%= @volunteer.id %>/edit" method="post">
    <input type="hidden" name="_method" value="patch">

    <div class="form-group name">
      <label for="name" class="control-label">Name</label>
      <input id="name" type="text" name="name" class="form-control" value="<%= @volunteer.name %>">
    </div>

    <div class="form-group">
      <label for="project-id">Project</label>
      <select class="form-control" name="project-id">
        <% @projects.each do |project| %>
          <option value="<%= project.id %>" <%= @volunteer.project_id == project.id ? 'selected="selected"' : nil %>><%= project.title %></option>
        <% end %>
      </select>
    </div>

    <div class="alert alert-danger volunteer-error">
      Name cannot be blank.
    </div>

    <button type="submit" class="btn volunteer-submit">Update Volunteer</button>
  </form>

  <form class="delete" action="/volunteers/<%= @volunteer.id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <button type="submit" class="btn">Delete Volunteer</button>
  </form>

<% else %>
  <h2>Volunteer Not Found</h2>
<% end %>

<h5><a href="/">Back to Homepage</a></h5>
